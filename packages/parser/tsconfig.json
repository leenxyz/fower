{
  "include": [
    "src",
    "types"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "lib": [
      "DOM",
      "ESNext",
    ],
    "target": "ESNext",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true
  }
}